@model IssueManagementSystem.ApplicationService.Web.ViewModels.User.UserCreateViewModel

@{
    ViewBag.Title = "ユーザー作成";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummaryAlert()

    @Html.Partial("_UserPartial", Model)

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PasswordForConfirmation)
        @Html.EditorFor(m => m.PasswordForConfirmation, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.PasswordForConfirmation, "", new { @class = "text-danger" })
    </div>


    <button class="btn btn-primary">作成</button>
    @Html.ActionLink("戻る", "Index", "User", new { @class = "btn btn-outline-secondary" })
}