@model IssueManagementSystem.ApplicationService.Web.ViewModels.Home.LoggedInMenuViewModel

@if (Model.IsLoggedIn)
{
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">@Html.ActionLink("課題一覧", "Index", "Issue", new { @class = "nav-link" })</li>
            <li class="nav-item active">@Html.ActionLink("課題作成", "About", "Home", new { @class = "nav-link" })</li>
            <li class="nav-item  active dropdown">
                <a href="#" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">マスタメンテ</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    @Html.ActionLink("ユーザー", "Contact", "Home", new { @class = "dropdown-item" })
                </div>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item active">@Html.ActionLink(Model.LoginUserName, "Index", "Home", new { @class = "nav-link" })</li>
            <li class="nav-item active">@Html.ActionLink("パスワード変更", "PasswordChange", "Home",new { UserId = Model.LoginUserId }, new { @class = "nav-link" })</li>
            <li class="nav-item active">@Html.ActionLink("ログアウト", "Logout", "Home", new { @class = "nav-link" })</li>
        </ul>
    </div>
