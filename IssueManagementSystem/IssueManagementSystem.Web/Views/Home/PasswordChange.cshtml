@model IssueManagementSystem.ApplicationService.Web.ViewModels.Home.PasswordChangeViewModel

@{
    ViewBag.Title = "パスワード変更";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummaryAlert()

    @Html.HiddenFor(m => m.UserId)

    <div class="form-group">
        @Html.LabelFor(m => m.NowPassword)
        @Html.EditorFor(m => m.NowPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.NowPassword, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword)
        @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewPasswordForConfirmation)
        @Html.EditorFor(m => m.NewPasswordForConfirmation, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.NewPasswordForConfirmation, "", new { @class = "text-danger" })
    </div>

    <button class="btn btn-primary">パスワード変更</button>
    @Html.ActionLink("戻る", "Index", "Home", new { @class = "btn btn-outline-secondary" })
}